{% extends 'layouts/layout.njk' %}

{% block header %}
{% include "partials/header-basic.njk" %}
{% endblock %}

{% block content %}

<div class="slab-container">
	<section class="slab slab--center">
		<div class=" container-fluid">
			<header class="slab__header">
				<h1 class="slab__title h1">Find A Service Center</h1>
				<p>
					Graco partners with authorized retailers&nbsp;to provide you with local sales and service support,
					application expertise and availability of inventory, including parts and accessories.</p>
			</header>
		</div>
	</section>
</div>

<div class="distributorlocatorhomeowner">

	<div class="js-tabbed-filters-dl"
		 data-dl-filter-models-servlet-href="https://www.graco.com/us/en/homeowner/how-to-buy/find-a-retailer/_jcr_content/par/distributorlocatorho.models.json">
		<div class="container-fluid">
			<div class="row slab-tab-content is-active js-slab-tabs-content" id="locator-content">
				<div class="col-12 px-0">
					<input type="hidden" id="moreInfoText" class="moreInfoText" value="Expand">
					<input type="hidden" id="lessInfoText" class="lessInfoText" value="Collapse">
					<input type="hidden" id="salesText" class="salesText" value="Sales">
					<input type="hidden" id="serviceText" class="serviceText" value="Service Center">
					<input type="hidden" id="rentalText" class="rentalText" value="Rental">
					<input type="hidden" id="directionsText" class="directionsText" value="Directions">
					<input type="hidden" id="moreInfoStyle" class="moreInfoStyle">
					<input type="hidden" id="regionCode" name="regionCode" value="north-america">
					<input type="hidden" id="pageLanguage" name="pageLanguage" value="en">
					<input type="hidden" id="useBing" class="useBing" value="false">

					<div class="d-flex flex-wrap flex-row justify-content-center">
						<div class="col-12 col-lg-10">
							<form class="locator-form js-locator-form" action="/" onsubmit="findDistributors(); return false;">
								<input type="hidden" id="_charset_" name="_charset_" value="UTF-8">
								<input type="hidden" id="DLType" name="DLType" value="Homeowner">
								<input type="hidden" id="familyWTB" name="familyWTB">
								<input type="hidden" id="lang" name="lang" value="en">
								<input type="hidden" id="locale" name="locale" value="en_US">
								<input type="hidden" id="langCode" name="langCode" value="en">

								{% set showSearchByChoices = true %}
								{% include "partials/form-search-by-block.njk" %}

								{% set searchByPart = false %}
								{% include "partials/form-part-block.njk" %}
								{% include "partials/form-application-block.njk" %}
							</form>
						</div>
					</div>
				</div>
			</div>

			<div class="col-12">
				<hr>
				<header>
					<h4 class="h4 py-2">SERVICE NEARBY</h4>
				</header>

				{% set showLocation = true %}
				{% include "partials/form-get-location-block.njk" %}

				{% set results = false %}
				<section id="results" class="d-flex flex-wrap flex-row justify-content-center">
					<div class="result col-12 border border-light-gray rounded mb-4 {% if results == true %}hidden{% endif %}">
						<p class="color-light-gray text-center py-4">Search for dealers and stores by city, state, or Zip code</p>
					</div>
					<div class="result col-12 border border-light-gray rounded mb-4 {% if results !== true %}hidden{% endif %}">
						<p class="color-light-gray text-center py-4">I am a result</p>
					</div>
				</section>
			</div>
		</div>
	</div>

	{% set showOnlineResults = false %}
	{% include "partials/online-results-block.njk" %}
	{% include "partials/customer-service-block.njk" %}

	<script src="https://www.graco.com/content/dam/graco/design/corporate/js/dealerPrograms.js"></script>
	<script src="https://www.graco.com/content/dam/graco/design/corporate/js/dealerWTBText.js"></script>

</div>
{% endblock %}

{% block footer %}
{% endblock %}
